<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarbucksCommerce3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StarbucksCommerce3.styles.css" asp-append-version="true" />
    <link href="https://db.onlinewebfonts.com/c/d7e8a95865396cddca89b00080d2cba6?family=SoDo+Sans+SemiBold" rel="stylesheet">
</head>
<body>
    <topheader>
        <div class="headertop">
            <img src="https://static.ticimax.cloud/56041/uploads/editoruploads/sbx-22136-e-comm-web-banner-1920x80-1.gif" />
        </div>
    </topheader>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            
                <div class="navbar-left">
                    <a class="navbar-logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/starbucks.png" height="70" width="70"></a>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Kahve</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Kupa & Termoslar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Aksesuarlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Demleme & Öğütme</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Son Kalanlar</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-right">
                        <input type="text" id="arama-kelimesi" placeholder="Arama">
                        <button type="submit">Ara</button>
                    <div class="memberlogin">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MemberLogin">Üye Girişi</a>
                    </div>
                    <div class="favorites">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Favorites">Favorilerim</a>
                    </div>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div
               <span>Kullanım Koşulları ve Sözleşmeler</span>
                <ul>
                    <li>
                        <a href="">Çerez Aydınlatma Metni</a>
                    </li>
                    <li>
                        <a href="">İnternet Sitesi Ziyaretçi Aydınlatma Metni</a>
                    </li>
                    <li>
                        <a href="">İade Şartları Hakkında Bilgilendirme</a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
